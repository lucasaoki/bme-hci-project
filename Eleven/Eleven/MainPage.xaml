<Page
    x:Name="pageRoot"
    x:Class="Eleven.MainPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Eleven"
    xmlns:data="using:Eleven.Data"
    xmlns:common="using:Eleven.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Page.Resources>
        <DataTemplate x:Key="PrimaryTemplate">
            <StackPanel >
                    <Grid>
                    <Image Source="{Binding Path=ImagePath}" Stretch="Uniform"/>
                    <TextBlock Text="{Binding Path=Title}" />
                    <TextBlock Text="{Binding Path=Description}"/>
                    <TextBlock Text="{Binding Path=Content}"/>
                </Grid>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SecundaryTemplate">
            <Grid>
                <StackPanel Width="300">
                    <Image Source="{Binding Path=ImagePath}" Stretch="Uniform"/>
                    <TextBlock Text="{Binding Path=Title}" />
                    <TextBlock Text="{Binding Path=Description}"/>
                    <TextBlock Text="{Binding Path=Content}"/>
                </StackPanel>
            </Grid>
        </DataTemplate> 

    </Page.Resources>
    
    <Grid Background="{ThemeResource ButtonBackgroundThemeBrush}" >
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid
            x:Name="itemGridView"
            AutomationProperties.AutomationId="ItemGridView"
            AutomationProperties.Name="Grouped Items"
            Grid.Column="1"
            Grid.Row="1"
            Background="SlateGray">
            <Hub>
                <HubSection x:Uid="Section1Header" IsHeaderInteractive="True" d:DataContext="{Binding Source={d:DesignData Source=/DataModel/Database.json, Type=data:DataSource}}">
                    <DataTemplate> 
                        <GridView
                        x:Name="itemGridView"
                        AutomationProperties.AutomationId="ItemGridView"
                         AutomationProperties.Name="Items In Group"
                        SelectionMode="None"
                        IsSwipeEnabled="false"
                        IsItemClickEnabled="True">

                            <Grid Width="600">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Image Source="{Binding Path=Groups[0].ImagePath}" 
                                           Stretch="UniformToFill" 
                                           HorizontalAlignment="Center"
                                           Grid.Row="0"/>
                                <TextBlock Text="{Binding Path=Groups[0].Title}"
                                            Grid.Row="1" />
                                <TextBlock Text="{Binding Path=Groups[0].Description}"
                                           Grid.Row="2"/>
                                <TextBlock Text="{Binding Path=Groups[0].Content}"
                                           Grid.Row="3"/>
                            </Grid>
                        </GridView>
                    </DataTemplate>
                </HubSection>

                <HubSection x:Uid="Section1Header" IsHeaderInteractive="True"  d:DataContext="{Binding Source={d:DesignData Source=/DataModel/Database.json, Type=data:DataSource}}">
                    <DataTemplate>
                        <GridView
                        x:Name="itemGridView"
                        AutomationProperties.AutomationId="ItemGridView"
                        AutomationProperties.Name="Items In Group"
                        ItemsSource="{Binding Groups}"
                        ItemTemplate="{StaticResource SecundaryTemplate}"
                        Width="Auto"
                        SelectionMode="None"
                        IsSwipeEnabled="false"
                        IsItemClickEnabled="True">
                        </GridView>
                    </DataTemplate>
                </HubSection>
            </Hub>
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GridView 
                ItemsSource="{Binding Source={StaticResource GroupViewSource}}" 
                ItemTemplate="{StaticResource PrimaryTemplate}"
                CanReorderItems="False"
                SelectionMode="None"
                IsSwipeEnabled="false"
                Padding="50,50,50,50"
                IsItemClickEnabled="True"
                Grid.Column="0"/>
            <GridView 
                    ItemsSource="{Binding Source={StaticResource GroupViewSource}}" 
                    ItemTemplate="{StaticResource SecundaryTemplate}"
                    CanReorderItems="False"
                    SelectionMode="None"
                    IsSwipeEnabled="false"
                    Padding="50,50,50,50"
                    IsItemClickEnabled="True"
                    Grid.Column="1"/>-->
        </Grid>
            <Grid Grid.Row="1" Grid.Column="0" 
              Background="DarkSlateGray" >

            <StackPanel VerticalAlignment="Top" Margin="0,25">

                <Grid x:Name="Home_Grid" PointerPressed="Home_Select_Click" PointerExited="Non_PointerExited" PointerMoved="Home_PointerMoved" Height="100">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="Assets/Home.gif"/>
                        </Grid.Background>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBlock x:Name="Home_TextBox"  Text="Home"  FontSize="30" FontFamily="Garamond" 
                            HorizontalAlignment="Left" VerticalAlignment="Center"   FontWeight="Normal"  Margin="0,0"/>
                    </Grid>
                </Grid>



                <Grid x:Name="Artwork_Grid" PointerPressed="ArtWork_Select_Click" PointerExited="Non_PointerExited" PointerMoved="Artwork_PointerMoved" Height="100">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="Assets/Artwork.gif"/>
                        </Grid.Background>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBlock x:Name="ArtWork_TextBox"  Text="Painting"  FontSize="30" FontFamily="Garamond" 
                            HorizontalAlignment="Left" VerticalAlignment="Center"   FontWeight="Normal"  Margin="0,0"/>
                    </Grid>
                </Grid>


                <Grid x:Name="Period_Grid" PointerPressed="Period_Select_Click" PointerExited="Non_PointerExited"  PointerMoved="Period_PointerMoved" Height="100">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="Assets/Period.gif"/>
                        </Grid.Background>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBlock x:Name="Period_TextBox"  Text="Period"  FontSize="30" FontFamily="Garamond" 
                            HorizontalAlignment="Left" VerticalAlignment="Center"   FontWeight="Normal"  Margin="0,0"/>
                    </Grid>
                </Grid>

                <Grid x:Name="Artist_Grid" PointerPressed="Artist_Select_Click" PointerExited="Non_PointerExited" PointerMoved="Artist_PointerMoved" Height="100">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="Assets/Artist.gif"/>
                        </Grid.Background>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBlock x:Name="Artist_TextBox"  Text="Artist"  FontSize="30" FontFamily="Garamond" 
                            HorizontalAlignment="Left" VerticalAlignment="Center"   FontWeight="Normal"  Margin="0,0"/>
                    </Grid>
                </Grid>

                <Grid x:Name="Sculpture_Grid" PointerPressed="Sculpture_Select_Click" PointerExited="Non_PointerExited" PointerMoved="Sculpture_PointerMoved" Height="100">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="Assets/Sculpture.gif"/>
                        </Grid.Background>
                    </Grid>
                    <Grid Grid.Column="1">
                        <TextBlock x:Name="Sculpture_TextBox"  Text="Sculpture"  FontSize="30" FontFamily="Garamond" 
                            HorizontalAlignment="Left" VerticalAlignment="Center"   FontWeight="Normal"  Margin="0,0"/>
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>

       
        <Grid Grid.Column="2" Grid.RowSpan="1" 
              Background="SlateGray" >
            <!--Search Block-->

            <Grid  VerticalAlignment="Center" Margin="0,60,0,40" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1" Grid.ColumnSpan="2" Height="40" VerticalAlignment="Top"  >
                    <StackPanel  Orientation="Horizontal" Margin="0,20,0,20">
                        <TextBox x:Name="SearchInput" Background="Transparent" HorizontalAlignment="Right" Foreground="White"  Margin="0,-18" Height="36" FontSize="20" Width="235" BorderThickness="0,0,0,1"
                                 PlaceholderText="Search" Tapped="SearchInput_Tapped" FontWeight="Bold" FontStyle="Italic" CharacterSpacing="100" TextAlignment="Right" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="2">
                    <Button>
                        <Image Source="Assets/Search.jpg" Stretch="Uniform"/>
                    </Button>
                </Grid>

            </Grid>
        </Grid>

        <Grid Grid.RowSpan="1" Grid.ColumnSpan="1" Background="DarkSlateGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>

            <!--GoBack Buttonm-->
            <Button x:Name="backButton" Margin="39,59,0,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button" Height="41" Width="41"/>

            <!--Title-->
            <TextBlock x:Name="pageTitle" Text="Eleven" Style="{StaticResource HeaderTextBlockStyle}"  Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40" Height="40"/>

            <!--Grid top right-->

        </Grid>


    </Grid>
</Page>
