<Page
    x:Name="pageRoot"
    x:Class="Eleven.MainPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Eleven"
    xmlns:data="using:Eleven.Data"
    xmlns:common="using:Eleven.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!--
            Collection of grouped items displayed by this page, bound to a subset
            of the complete item list because items in groups cannot be virtualized
        -->
        <CollectionViewSource
            x:Name="groupedItemsViewSource"
            Source="{Binding Groups}"
            IsSourceGrouped="true"
            ItemsPath="Items"
            d:Source="{Binding Groups, Source={d:DesignData Source=/DataModel/Database.json, Type=data:DataSource}}"/>
    </Page.Resources>

    <Grid Background="{ThemeResource ButtonBackgroundThemeBrush}"  KeyDown="Press_KeyBoard">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="2" Grid.ColumnSpan="1" 
              Background="DarkSlateGray" >

            <StackPanel VerticalAlignment="Center">

                <Grid x:Name="Home_Grid" Tapped="Home_Select_Click" PointerMoved="Home_PointerMoved" Height="150">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.RowSpan="1">
                        <Grid.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="Assets/Logo.png"/>
                        </Grid.Background>
                    </Grid>
                    <Grid Grid.RowSpan="2">
                        <TextBlock x:Name="Home_TextBox"  Text="Home"  FontSize="30" FontFamily="Garamond" 
                            HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="350" Height="40" FontWeight="Normal" Padding="50, 0 ,0 ,0"  Foreground="{ThemeResource ListViewItemOverlayForegroundThemeBrush}" 
                            Style="{StaticResource TitleTextBlockStyle}"  Margin="0,0,-10,0"/>
                    </Grid>
                </Grid>


                <Grid x:Name="Artwork_Grid" Tapped="ArtWork_Select_Click" PointerMoved="Artwork_PointerMoved" Height="150">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.RowSpan="1">
                        <Grid.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="Assets/Logo.png"/>
                        </Grid.Background>
                    </Grid>
                    <Grid Grid.RowSpan="2">
                        <TextBlock x:Name="ArtWork_TextBox"  Text="Painting"  FontSize="30" FontFamily="Garamond" 
                            HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="350" Height="40" FontWeight="Normal" Padding="50, 0 ,0 ,0"  Foreground="{ThemeResource ListViewItemOverlayForegroundThemeBrush}" 
                            Style="{StaticResource TitleTextBlockStyle}"  Margin="0,0,-10,0"/>
                    </Grid>
                </Grid>


                <Grid x:Name="Period_Grid" Tapped="Period_Select_Click" PointerMoved="Period_PointerMoved" Height="150">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.RowSpan="1">
                        <Grid.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="Assets/Logo.png"/>
                        </Grid.Background>
                    </Grid>
                    <Grid Grid.RowSpan="2">
                        <TextBlock x:Name="Period_TextBox"  Text="Period"  FontSize="30" FontFamily="Garamond" 
                            HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="350" Height="40" FontWeight="Normal" Padding="50, 0 ,0 ,0"  Foreground="{ThemeResource ListViewItemOverlayForegroundThemeBrush}" 
                            Style="{StaticResource TitleTextBlockStyle}"  Margin="0,0,-10,0"/>
                    </Grid>
                </Grid>

                <Grid x:Name="Artist_Grid" Tapped="Artist_Select_Click" PointerMoved="Artist_PointerMoved" Height="150">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.RowSpan="1">
                        <Grid.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="Assets/Logo.png"/>
                        </Grid.Background>
                    </Grid>
                    <Grid Grid.RowSpan="2">
                        <TextBlock x:Name="Artist_TextBox"  Text="Artist"  FontSize="30" FontFamily="Garamond" 
                            HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="350" Height="40" FontWeight="Normal" Padding="50, 0 ,0 ,0"  Foreground="{ThemeResource ListViewItemOverlayForegroundThemeBrush}" 
                            Style="{StaticResource TitleTextBlockStyle}"  Margin="0,0,-10,0"/>
                    </Grid>
                </Grid>

                <Grid x:Name="Sculpture_Grid" Tapped="Sculpture_Select_Click" PointerMoved="Sculpture_PointerMoved" Height="150">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.RowSpan="1">
                        <Grid.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="Assets/Logo.png"/>
                        </Grid.Background>
                    </Grid>
                    <Grid Grid.RowSpan="2">
                        <TextBlock x:Name="Sculpture_TextBox"  Text="Sculpture"  FontSize="30" FontFamily="Garamond" 
                            HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="350" Height="40" FontWeight="Normal" Padding="50, 0 ,0 ,0"  Foreground="{ThemeResource ListViewItemOverlayForegroundThemeBrush}" 
                            Style="{StaticResource TitleTextBlockStyle}"  Margin="0,0,-10,0"/>
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="2" 
              Grid.Row="2" 
              Background="SlateGray">


          
            <GridView HorizontalAlignment="Left" Height="631" VerticalAlignment="Top" Width="1021">

            </GridView>




        </Grid>

        <Grid Grid.Column="2" Grid.RowSpan="1" 
              Background="SlateGray" >
            <!--Search Block-->

            <Grid  VerticalAlignment="Center" Margin="0,60,0,40" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1" Grid.ColumnSpan="2" Height="40" VerticalAlignment="Top"  >
                    <StackPanel  Orientation="Horizontal" Margin="0,20,0,20">
                        <TextBox x:Name="SearchInput" Background="Transparent" HorizontalAlignment="Right" Foreground="White"  Margin="0,-18" Height="36" FontSize="20" Width="235" BorderThickness="0,0,0,1"
                                 PlaceholderText="Search" Tapped="SearchInput_Tapped" FontWeight="Bold" FontStyle="Italic" CharacterSpacing="100" TextAlignment="Right" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="2">
                    <Button>
                        <Image Source="Assets/Search.jpg" Stretch="Uniform"/>
                    </Button>
                </Grid>

            </Grid>
        </Grid>

        <Grid Grid.RowSpan="1" Grid.ColumnSpan="1" Background="DarkSlateGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>

            <!--GoBack Buttonm-->
            <Button x:Name="backButton" Margin="39,59,0,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button" Height="41" Width="41"/>

            <!--Title-->
            <TextBlock x:Name="pageTitle" Text="Eleven" Style="{StaticResource HeaderTextBlockStyle}"  Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40" Height="40"/>

            <!--Grid top right-->

        </Grid>


    </Grid>
</Page>
